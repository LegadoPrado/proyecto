<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:elevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/disenio_recyclerview">

        <TextView
            android:id="@+id/tv_NContrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="2660-22"
            android:textSize="@dimen/txtGrande"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Nombre"
            android:layout_width="168dp"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/txtpequenio"
            android:text="SELENE PEREZ MENDOZA"
            app:layout_constraintStart_toStartOf="@+id/tv_NContrato"
            app:layout_constraintTop_toBottomOf="@+id/tv_NContrato" />

        <TextView
            android:id="@+id/tv_NOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1025"
            android:textSize="@dimen/txtGrande"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_NContrato"
            app:layout_constraintStart_toStartOf="@+id/tv_estatus"
            app:layout_constraintTop_toTopOf="@+id/tv_NContrato"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_estatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/txtpequenio"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Nombre"
            app:layout_constraintStart_toEndOf="@+id/tv_Nombre"
            app:layout_constraintTop_toTopOf="@+id/tv_Nombre" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>